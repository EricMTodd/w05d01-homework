<body>
	<h1>Fruits Index Page</h1>

	<a href="./new">Create New Fruit</a>

	<% for (let i = 0; i < fruitsList.length; i++) { %>
		<h3><a href="<%= i %>"><%= fruitsList[i].name %></a></h3>
		<form method="POST" action="/fruits/<%=fruitsList[i].id%>?_method=DELETE">
